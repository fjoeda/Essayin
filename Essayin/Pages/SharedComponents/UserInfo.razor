
<div class="card">
    <div class="card-body">
        <h2>@Name</h2>
        <div>
            <span class="oi oi-envelope-closed" aria-hidden="true"></span> @Email
        </div>
        <div>
            <span class="oi oi-person" aria-hidden="true"></span> @Role
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string Name { get; set; }
    [Parameter]
    public string Email { get; set; }
    [Parameter]
    public string Role { get; set; }
}
